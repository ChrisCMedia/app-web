# Database Configuration
# Get your PostgreSQL database from: https://neon.tech, https://supabase.com, or use local PostgreSQL
DATABASE_URL="postgresql://username:password@host:5432/database?sslmode=require"
SHADOW_DATABASE_URL="postgresql://username:password@host:5432/shadow_database?sslmode=require"

# NextAuth Configuration
# Generate a secret with: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-here-min-32-chars"
AUTH_TRUST_HOST=true

# Stack Auth Configuration (Optional - if using Stack Auth instead of NextAuth)
# Get your keys from: https://stack-auth.com
NEXT_PUBLIC_STACK_PROJECT_ID="your-stack-project-id"
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY="your-stack-publishable-key"
STACK_SECRET_SERVER_KEY="your-stack-secret-key"
STACK_JWKS_URL="https://api.stack-auth.com/api/v1/projects/YOUR_PROJECT_ID/.well-known/jwks.json"

# Email Configuration (Optional)
# For sending invoices, quotes, and notifications
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-specific-password"
SMTP_FROM="noreply@handwerker.de"

# AI Configuration (Optional)
# For AI-powered features
OPENAI_API_KEY="sk-..."

# File Storage (Optional)
# For storing documents and images
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="eu-central-1"
AWS_S3_BUCKET="handwerker-files"

# Monitoring (Optional)
# OpenTelemetry configuration
OTEL_EXPORTER_OTLP_ENDPOINT="http://localhost:4318"
OTEL_SERVICE_NAME="handwerker-webapp"

# Feature Flags (Optional)
NEXT_PUBLIC_ENABLE_AI_FEATURES="false"
NEXT_PUBLIC_ENABLE_GPS_TRACKING="false"
NEXT_PUBLIC_ENABLE_OFFLINE_MODE="false"

# Development Settings
NODE_ENV="development"
NEXT_TELEMETRY_DISABLED=1