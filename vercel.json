{
  "buildCommand": "npm run db:generate && npm run build",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "env": {
    "DATABASE_URL": "@database_url",
    "SHADOW_DATABASE_URL": "@shadow_database_url",
    "NEXTAUTH_URL": "@nextauth_url",
    "NEXTAUTH_SECRET": "@nextauth_secret",
    "NEXT_PUBLIC_STACK_PROJECT_ID": "@stack_project_id",
    "NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY": "@stack_client_key",
    "STACK_SECRET_SERVER_KEY": "@stack_server_key",
    "STACK_JWKS_URL": "@stack_jwks_url",
    "AUTH_TRUST_HOST": "true"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, max-age=0"
        }
      ]
    }
  ],
  "functions": {
    "app/api/ai/route.ts": {
      "maxDuration": 30
    },
    "app/api/pdf/route.ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/backup",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/cleanup",
      "schedule": "0 3 * * 0"
    }
  ]
}